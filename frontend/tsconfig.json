{
  "compilerOptions": {
    /* Alvo e libs do navegador */
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],

    /* Módulos/bundler */
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,

    /* JSX (React 17+) */
    "jsx": "react-jsx",

    /* Não emitir arquivos .js (Vite faz o build) */
    "noEmit": true,

    /* Qualidade */
    "skipLibCheck": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"]
}
